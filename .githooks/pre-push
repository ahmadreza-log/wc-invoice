#!/bin/bash
#
# Git pre-push hook to automatically bump version
# Install: ln -s ../../.githooks/pre-push .git/hooks/pre-push
#

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}üîç Checking if version needs to be bumped...${NC}"

# Get current branch
BRANCH=$(git symbolic-ref --short HEAD)

# Only run on main/master branches
if [[ "$BRANCH" != "main" && "$BRANCH" != "master" ]]; then
    echo -e "${GREEN}‚úì Not on main/master branch, skipping version bump${NC}"
    exit 0
fi

# Check if last commit message contains version bump
LAST_COMMIT_MSG=$(git log -1 --pretty=%B)
if [[ "$LAST_COMMIT_MSG" == *"chore: bump version"* ]]; then
    echo -e "${GREEN}‚úì Version already bumped in last commit${NC}"
    exit 0
fi

# Check if there are changes to plugin files (excluding version files)
CHANGED_FILES=$(git diff --cached --name-only)
HAS_PLUGIN_CHANGES=false

for file in $CHANGED_FILES; do
    if [[ "$file" == "wc-invoice.php" ]] || [[ "$file" == includes/*.php ]] || [[ "$file" == assets/** ]]; then
        HAS_PLUGIN_CHANGES=true
        break
    fi
done

if [ "$HAS_PLUGIN_CHANGES" = false ]; then
    echo -e "${GREEN}‚úì No plugin code changes detected${NC}"
    exit 0
fi

# Get current version
CURRENT_VERSION=$(grep -oP "Version:\s*\K[0-9]+\.[0-9]+\.[0-9]+" wc-invoice.php | head -1)

if [ -z "$CURRENT_VERSION" ]; then
    echo -e "${RED}‚ùå Error: Could not find version in wc-invoice.php${NC}"
    exit 1
fi

echo -e "${YELLOW}Current version: $CURRENT_VERSION${NC}"

# Bump patch version
IFS='.' read -ra ADDR <<< "$CURRENT_VERSION"
MAJOR=${ADDR[0]}
MINOR=${ADDR[1]}
PATCH=${ADDR[2]}

PATCH=$((PATCH + 1))
NEW_VERSION="$MAJOR.$MINOR.$PATCH"

echo -e "${YELLOW}New version: $NEW_VERSION${NC}"

# Update version in plugin file
sed -i.bak "s/Version:\s*[0-9]\+\.[0-9]\+\.[0-9]\+/Version: $NEW_VERSION/" wc-invoice.php
sed -i.bak "s/define('WC_INVOICE_VERSION', '[0-9]\+\.[0-9]\+\.[0-9]\+');/define('WC_INVOICE_VERSION', '$NEW_VERSION');/" wc-invoice.php
rm -f wc-invoice.php.bak

# Update CHANGELOG.md
if [ -f "CHANGELOG.md" ]; then
    DATE=$(date +%Y-%m-%d)
    ENTRY="## [Unreleased]\n\n## [$NEW_VERSION] - $DATE\n\n### Changed\n- üî¢ Auto-bumped version to $NEW_VERSION\n\n"
    
    # Insert after [Unreleased] section
    if [[ "$OSTYPE" == "darwin"* ]]; then
        # macOS
        sed -i '' "/## \[Unreleased\]/a\\
$ENTRY
" CHANGELOG.md
    else
        # Linux
        sed -i "/## \[Unreleased\]/a\\$ENTRY" CHANGELOG.md
    fi
fi

# Stage version files
git add wc-invoice.php CHANGELOG.md

echo -e "${GREEN}‚úÖ Version bumped to $NEW_VERSION${NC}"
echo -e "${YELLOW}üìù Version files have been staged. Continue with push? (y/n)${NC}"
read -r response

if [[ ! "$response" =~ ^[Yy]$ ]]; then
    echo -e "${RED}Push cancelled${NC}"
    git reset HEAD wc-invoice.php CHANGELOG.md
    exit 1
fi

exit 0

